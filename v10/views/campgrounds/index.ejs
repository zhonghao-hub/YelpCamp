<%- include("../partials/hearder") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p> View our campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(c){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src= <%= c.image %> >
                    <div class="caption">
                        <h4><%= c.name %></h4>
                    </div>
                </div>
                <p>
                    <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">More Info</a>
                </p>
                
            </div>
        <%});%>
    </div>
</div>


<%- include("../partials/footer")%>